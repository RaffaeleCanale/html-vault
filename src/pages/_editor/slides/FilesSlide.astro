---
import AnimatedLabel from '../../../components/atoms/AnimatedLabel.astro';
import FilesPicker from '../../../components/organisms/FilesPicker.astro';
---

<div class="files-slide">
    <AnimatedLabel id="choose-files" reverse>
        1. Choose files to encrypt
    </AnimatedLabel>
    <FilesPicker id="file-picker" />
</div>

<style>
    .files-slide {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 1rem 0rem;
        gap: 0.5rem;
    }
</style>
