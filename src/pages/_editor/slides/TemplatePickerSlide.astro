---
import AnimatedLabel from '../../../components/atoms/AnimatedLabel.astro';
import BashFileIcon from '../../../components/icons/BashFileIcon.svg?raw';
import HtmlFileIcon from '../../../components/icons/HtmlFileIcon.svg?raw';
import HtmlFilesIcon from '../../../components/icons/HtmlFilesIcon.svg?raw';
import TemplateCard from '../components/TemplateCard.astro';
---

<div class="method-picker">
    <div class="method-picker__cards">
        <TemplateCard id="html-single">
            <Fragment set:html={HtmlFileIcon} slot="icon" />
            HTML file
        </TemplateCard>
        <TemplateCard id="bash-single" disabled>
            <Fragment set:html={BashFileIcon} slot="icon" />
            Bash file
        </TemplateCard>
        <TemplateCard id="html-split">
            <Fragment set:html={HtmlFilesIcon} slot="icon" />
            Cryptographic Splitting
        </TemplateCard>
    </div>
    <AnimatedLabel id="choose-template">2. Choose vault type</AnimatedLabel>
</div>

<style>
    .method-picker {
        padding: 1rem;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
    }

    .method-picker__cards {
        max-width: 50rem;
        display: grid;
        max-height: 70%;
        grid-template-columns: 1fr;
        grid-template-rows: 1fr;
        grid-auto-rows: 1fr;
        gap: 2rem;
    }
</style>
