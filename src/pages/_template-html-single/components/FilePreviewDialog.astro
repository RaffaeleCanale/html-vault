---
import UploadIcon from '../../../components/icons/UploadIcon.svg?raw';
---

<div id="file-preview-dialog">
    <div id="file-preview-container" class="--dark">
        <div class="file-preview-page__header">
            <h3 id="fp-title"></h3>
            <a id="fp-download" class="--clickable">
                <Fragment set:html={UploadIcon} />
            </a>
        </div>
        <div id="file-preview"></div>
    </div>
</div>

<style>
    #file-preview-dialog {
        --preview-animation-duration: 300ms;

        position: absolute;
        top: 0;
        left: 0;
        display: none;
        animation: grow var(--preview-animation-duration) forwards;
        /* transition: left 1s, top 1s, width 1s, height 1s; */
        /* transition: all 1s; */
        /* margin: 3rem; */
        /* padding: 3rem; */
        opacity: 0;
    }
    #file-preview-dialog.shrink {
        /* animation: unset !important; */
        /* animation: grow 1s backwards; */
        /* animation-direction: reverse; */
        /* top: 0;
        left: 0;
        width: 100%;
        height: 100; */
        animation: shrink var(--preview-animation-duration) forwards;
    }

    @keyframes grow {
        100% {
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 1;
            padding: 3rem;
        }
    }
    @keyframes shrink {
        0% {
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 1;
            padding: 3rem;
        }
    }

    #file-preview-container {
        display: flex;
        flex-direction: column;
        color: var(--font-color);
        background-color: var(--background-color);
        padding: 1rem;

        width: 100%;
        height: 100%;
    }

    #file-preview {
        background-color: var(--container-color);
        flex-grow: 1;
        /* padding: 1rem; */
    }

    :global(.--text) {
        padding: 1rem;
    }

    :global(#file-preview img) {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .file-preview-page__header {
        display: flex;
        align-items: center;
    }

    .file-preview-page__header h3 {
        flex-grow: 1;
    }

    .file-preview-page__header :global(svg) {
        margin: 0.5rem;
        height: 2rem;
        width: 2rem;
    }
    #file-preview :global(.__no-preview) {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rem;
        font-style: italic;
    }
    /* :global(.__no-preview .--clickable) {
        padding: 1rem;
    } */
    /* :global(.__no-preview .--clickable:hover) {
        background-color: rgba(0, 0, 0, 0.2);
    } */
    /* :global(.__no-preview .--clickable:active) {
        background-color: rgba(0, 0, 0, 0.4);
    } */
</style>
