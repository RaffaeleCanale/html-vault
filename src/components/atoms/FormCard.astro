---
const showTitle = !!Astro.slots.title;
---

<form class="form-card --dark" onsubmit="return false">
    {
        showTitle && (
            <h1>
                <slot name="title" />
            </h1>
        )
    }
    <slot />
</form>

<style>
    .form-card {
        display: flex;
        flex-direction: column;
        align-items: center;

        width: 100%;
        gap: 1rem;
        padding: 1rem;

        background-color: var(--background-color);
    }

    .form-card h1 {
        color: var(--font-color);
        margin: 0 0 0 0;
        padding: 0;
    }
</style>
